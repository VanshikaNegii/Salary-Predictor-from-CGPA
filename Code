from tkinter import *
from random import randint
import pandas as pd
from sklearn.model_selection import train_test_split
from sklearn.linear_model import LinearRegression
lr = LinearRegression()
df = pd.read_csv("placement.txt")
x= df.iloc[:,0:1]
y= df.iloc[:,-1]
x_train, x_test, y_train, y_test = train_test_split(x,y, test_size=0.3, random_state=42)
regressor = LinearRegression()
regressor.fit(x_train, y_train)
y_pred = regressor.predict(x_test)
regressor.score(x_test,y_test)
root = Tk()
root.title('Python mini project - Sallary Generator')
root.geometry("500x300")

def new_rand():
    c = float(my_entry.get())
    a = regressor.predict([[c]])
    pw_entry.insert(0,a)

lf = LabelFrame(root, text="How Much is your CJPA?")
lf.pack(pady=20)
my_entry = Entry(lf, font=("Helvetica", 24))
my_entry.pack(pady=20, padx=20)
print(lf)
pw_entry = Entry(root, text='', font=("Helvetica", 24), bd=0, bg="systembuttonface")
pw_entry.pack(pady=20)

my_frame = Frame(root)
my_frame.pack(pady=20)

my_button = Button(my_frame, text="Generate My Sallary", command=new_rand)
my_button.grid(row=0, column=0, padx=10)
root.mainloop()
